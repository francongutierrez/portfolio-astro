---
import Header from '../components/global/Header.astro';
import Hero from '../components/index/Hero.astro';
import MyHistory from '../components/index/MyHistory.astro';
import TechStack from '../components/index/TechStack.astro';
import Experience from '../components/index/Experience.astro';
import ProjectsSection from '../components/index/ProjectsSection.astro';
import Contact from '../components/index/Contact.astro';
import Footer from '../components/Footer.astro';
---
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Franco Gutierrez — Desarrollador Web & Analista Funcional</title>
  <meta name="description" content="Portfolio de Franco Gutierrez - Técnico en Web, Analista Funcional y Desarrollador con pasión por crear soluciones tecnológicas innovadoras." />
  <link rel="stylesheet" href="/src/styles/global.css" />
</head>
  <body class="bg-slate-50 text-slate-600 dark:bg-[#0d1117] dark:text-slate-300 transition-colors duration-300">
    <Header />
    <Hero />
    <main class="relative z-10">
      <MyHistory />
      <TechStack />
      <ProjectsSection />
      <Experience />
      <Contact />
    </main>
    <Footer />
  </body>
</html>

