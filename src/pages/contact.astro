---
import Header from '../components/global/Header.astro';
import Footer from '../components/global/Footer.astro';
---
<html lang="es" class="scroll-smooth">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Contacto â€” Franco Gutierrez</title>
  <link rel="stylesheet" href="/src/styles/global.css" />
  <link rel="icon" type="image/x-icon" href="/portfolio.ico" /> 
</head>

<body class="bg-slate-50 text-slate-600 dark:bg-[#0d1117] dark:text-slate-400 transition-colors duration-300 flex flex-col min-h-screen">
  <Header />

  <main class="flex-grow w-full max-w-xl mx-auto p-8 flex flex-col justify-center">
    <div>
      <h1 class="text-3xl font-bold mb-6 text-center text-slate-900 dark:text-white">Contacto</h1>

      <form action="https://formspree.io/f/tu_id_formspree" method="POST" class="contact-form">
        <input name="name" placeholder="Tu nombre" required class="form-input" />
        <input type="email" name="email" placeholder="Tu correo" required class="form-input" />
        <textarea name="message" placeholder="Tu mensaje" required class="form-input h-32 resize-none"></textarea>
        <button type="submit" class="submit-btn">Enviar</button>
      </form>

    </div>
  </main>
  
  <Footer />
</body>
</html>
