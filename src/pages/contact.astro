---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Contacto — Franco Gutierrez</title>
  <link rel="stylesheet" href="/src/styles/global.css" />
</head>
<body>
  <Header />
  <main class="max-w-xl mx-auto p-8">
    <h1 class="text-3xl font-bold mb-4 text-center">Contacto</h1>
    <form action="https://formspree.io/f/tu_id_formspree" method="POST" class="flex flex-col gap-4 bg-white p-6 rounded shadow-sm">
      <input name="name" placeholder="Tu nombre" required class="border p-2 rounded" />
      <input type="email" name="email" placeholder="Tu correo" required class="border p-2 rounded" />
      <textarea name="message" placeholder="Tu mensaje" required class="border p-2 rounded"></textarea>
      <button type="submit" class="bg-blue-600 text-white p-2 rounded hover:bg-blue-700">Enviar</button>
    </form>

    <div class="mt-6 text-center text-gray-600">
      También podés escribirme a <a href="mailto:francogutierrez04@gmail.com" class="underline">francogutierrez04@gmail.com</a>
    </div>
  </main>
  <Footer />
</body>
</html>
