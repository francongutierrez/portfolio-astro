---
// 1. AÑADIMOS ESTAS DOS LÍNEAS
import { useTranslations } from '../../i18n/utils';
const t = useTranslations(Astro.currentLocale as 'es' | 'en');
---
<!-- SECCIÓN "STACK TECNOLÓGICO" -->
<section class="section-spacing bg-black/5 dark:bg-black/20 backdrop-blur-sm">
  <div class="max-w-5xl mx-auto px-8">
    <h2 class="section-title text-slate-900 dark:text-slate-100">
      <span class="icon-emoji">🛠️</span>
      <!-- 2. CAMBIAMOS EL TÍTULO -->
      {t('stack.title')}
    </h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      
      <!-- 3. REEMPLAZAMOS EL CONTENIDO DE CADA TARJETA -->
      <div class="tech-card">
        <div class="text-4xl mb-3">🌐</div>
        <h3 class="font-bold mb-2 text-slate-800 dark:text-slate-100">{t('stack.frontend_title')}</h3>
        <p class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed">{t('stack.frontend_desc')}</p>
      </div>
      
      <div class="tech-card">
        <div class="text-4xl mb-3">⚙️</div>
        <h3 class="font-bold mb-2 text-slate-800 dark:text-slate-100">{t('stack.backend_title')}</h3>
        <p class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed">{t('stack.backend_desc')}</p>
      </div>
      
      <div class="tech-card">
        <div class="text-4xl mb-3">💾</div>
        <h3 class="font-bold mb-2 text-slate-800 dark:text-slate-100">{t('stack.database_title')}</h3>
        <p class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed">{t('stack.database_desc')}</p>
      </div>
      
      <div class="tech-card">
        <div class="text-4xl mb-3">🔧</div>
        <h3 class="font-bold mb-2 text-slate-800 dark:text-slate-100">{t('stack.tools_title')}</h3>
        <p class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed">{t('stack.tools_desc')}</p>
      </div>
      
    </div>
  </div>
</section>

