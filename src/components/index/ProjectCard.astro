---
// 1. Importamos las utilidades de traducción
import { useTranslations } from '../../i18n/utils';
const t = useTranslations(Astro.currentLocale as 'es' | 'en');

// 2. Las props (title, description, link) ya vienen traducidas desde el componente padre
const { title, description, link } = Astro.props;
---
<a href={link} target="_blank" rel="noopener" class="project-card block">

  <h3 class="font-semibold text-lg mb-2 text-slate-800 dark:text-white">{title}</h3>
  <p class="text-sm text-gray-600 dark:text-slate-400 mb-2">{description}</p>
  
  <!-- 3. Usamos la clave del JSON para el texto del botón -->
  <span class="text-blue-600 dark:text-blue-400 text-sm font-medium">
    {t('projects.viewButton')} →
  </span>

</a>

<style>
  /* Tus estilos no necesitan cambios */
  .project-card span {
    transition: transform 0.3s ease;
  }
  .project-card:hover span {
    transform: translateX(4px);
  }
</style>

